{% extends "base.html" %}

{% block title %}Card Catalog - The Lotus TCG{% endblock %}

{% block content %}
<div class="container my-4">
    <div class="row">
        <div class="col-lg-3">
            <!-- Search and Filters -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-filter me-2"></i>Search & Filters
                    </h5>
                </div>
                <div class="card-body">
                    <form method="GET" action="{{ url_for('catalog') }}">
                        <!-- Search -->
                        <div class="mb-3">
                            <label for="q" class="form-label">Card Name</label>
                            <input type="text" class="form-control" id="q" name="q" 
                                   value="{{ current_filters.q }}" placeholder="Search cards...">
                        </div>
                        
                        <!-- Set Filter -->
                        <div class="mb-3">
                            <label for="set" class="form-label">Set</label>
                            <select class="form-select" id="set" name="set">
                                <option value="">All Sets</option>
                                {% for set_name in all_sets %}
                                <option value="{{ set_name }}" 
                                        {% if current_filters.set == set_name %}selected{% endif %}>
                                    {{ set_name }}
                                </option>
                                {% endfor %}
                            </select>
                        </div>
                        
                        <!-- Rarity Filter -->
                        <div class="mb-3">
                            <label for="rarity" class="form-label">Rarity</label>
                            <select class="form-select" id="rarity" name="rarity">
                                <option value="">All Rarities</option>
                                {% for rarity in all_rarities %}
                                <option value="{{ rarity }}" 
                                        {% if current_filters.rarity == rarity %}selected{% endif %}>
                                    {{ rarity }}
                                </option>
                                {% endfor %}
                            </select>
                        </div>
                        
                        <!-- Price Range -->
                        <div class="mb-3">
                            <label class="form-label">Price Range</label>
                            <div class="row">
                                <div class="col-6">
                                    <input type="number" class="form-control" name="min_price" 
                                           value="{{ current_filters.min_price }}" placeholder="Min" step="0.01" min="0">
                                </div>
                                <div class="col-6">
                                    <input type="number" class="form-control" name="max_price" 
                                           value="{{ current_filters.max_price }}" placeholder="Max" step="0.01" min="0">
                                </div>
                            </div>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search me-2"></i>Search
                            </button>
                            <a href="{{ url_for('catalog') }}" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-2"></i>Clear Filters
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-lg-9">
            <!-- Results Header -->
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2>Card Catalog</h2>
                <span class="text-muted">{{ cards|length }} card(s) found</span>
            </div>
            
            <!-- Active Filters -->
            {% set active_filters = [] %}
            {% if current_filters.q %}{% set _ = active_filters.append(('Search', current_filters.q)) %}{% endif %}
            {% if current_filters.set %}{% set _ = active_filters.append(('Set', current_filters.set)) %}{% endif %}
            {% if current_filters.rarity %}{% set _ = active_filters.append(('Rarity', current_filters.rarity)) %}{% endif %}
            {% if current_filters.min_price %}{% set _ = active_filters.append(('Min Price', 'VND' + current_filters.min_price)) %}{% endif %}
            {% if current_filters.max_price %}{% set _ = active_filters.append(('Max Price', 'VND' + current_filters.max_price)) %}{% endif %}
            
            {% if active_filters %}
            <div class="mb-3">
                <small class="text-muted">Active filters:</small>
                {% for filter_name, filter_value in active_filters %}
                <span class="badge bg-info me-1">{{ filter_name }}: {{ filter_value }}</span>
                {% endfor %}
            </div>
            {% endif %}
            
            <!-- Cards Grid -->
            {% if cards %}
            <div class="row">
                {% for card in cards %}
                <div class="col-xl-4 col-lg-6 col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <strong class="text-truncate me-2">{{ card.name }}</strong>
                            <span class="badge bg-secondary">{{ card.rarity }}</span>
                        </div>
                        <div class="card-body">
                            <div class="text-center mb-3">
                                {% if card.image_url %}
                                <img src="{{ card.image_url }}" alt="{{ card.name }}" 
                                     class="img-fluid rounded" style="height: 200px; width: auto; max-width: 100%; object-fit: contain;"
                                     onerror="this.style.display='none'; this.nextElementSibling.style.display='block';">
                                <div style="display: none;">
                                    <i class="fas fa-image display-4 text-muted"></i>
                                    <p class="text-muted small mt-1">Image Not Available</p>
                                </div>
                                {% else %}
                                <i class="fas fa-image display-4 text-muted"></i>
                                <p class="text-muted small mt-1">No Image</p>
                                {% endif %}
                            </div>
                            <div class="small">
                                <p class="mb-1"><strong>Set:</strong> {{ card.set_name }}</p>
                                <p class="mb-1"><strong>Condition:</strong> {{ card.condition }}</p>
                                <p class="mb-1"><strong>Price:</strong> <span class="text-success fw-bold">{{ "{:,.0f}".format(card.price) }} VND</span></p>
                                <p class="mb-2"><strong>Available:</strong> 
                                    {% if card.quantity > 0 %}
                                        <span class="text-success">{{ card.quantity }} copies</span>
                                    {% else %}
                                        <span class="text-danger">Out of Stock</span>
                                    {% endif %}
                                </p>
                                {% if card.description %}
                                <p class="text-muted">{{ card.description[:100] }}{% if card.description|length > 100 %}...{% endif %}</p>
                                {% endif %}
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="d-flex gap-2">
                                <a href="{{ url_for('card_detail', card_id=card.id) }}" class="btn btn-outline-primary btn-sm flex-fill">
                                    <i class="fas fa-eye me-1"></i>Details
                                </a>
                                {% if card.quantity > 0 %}
                                <form method="POST" action="/cart/add" class="add-to-cart-form flex-fill">
                                     <input type="hidden" name="card_id" value="{{ card.id }}">
                                    <input type="hidden" name="quantity" value="1">
                                    <button type="submit" class="btn btn-success btn-sm w-100">
                                        <i class="fas fa-cart-plus me-1"></i>Add to Cart
                                    </button>
                                </form>
                                {% else %}
                                <button class="btn btn-secondary btn-sm flex-fill" disabled>
                                    <i class="fas fa-times me-1"></i>Out of Stock
                                </button>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
            {% else %}
            <div class="text-center py-5">
                <i class="fas fa-search display-1 text-muted mb-4"></i>
                <h4>No Cards Found</h4>
                <p class="text-muted">Try adjusting your search criteria or browse all available cards.</p>
                <a href="{{ url_for('catalog') }}" class="btn btn-outline-primary">
                    <i class="fas fa-list me-2"></i>Show All Cards
                </a>
            </div>
            {% endif %}
        </div>
    </div>
</div>

<div class="flash-messages">
    {% with messages = get_flashed_messages(with_categories=true) %}
        {% if messages %}
            {% for category, message in messages %}
                <div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endif %}
    {% endwith %}
</div>
{% endblock %}

{% block scripts %}
<script>
// Auto-submit form on filter change (optional enhancement)
document.addEventListener('DOMContentLoaded', function() {
    const selects = document.querySelectorAll('#set, #rarity');
    selects.forEach(select => {
        select.addEventListener('change', function() {
            // Uncomment to enable auto-submit on filter change
            // this.form.submit();
        });
    });

    document.querySelectorAll('.add-to-cart-form').forEach(function(form) {
        form.addEventListener('submit', function(e) {
            e.preventDefault();

            // Lấy card_id từ URL của form
            const cardId = form.querySelector('[name="card_id"]').value;
            
            fetch('/cart/add', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest'
                },
                body: JSON.stringify({
                    card_id: cardId,
                    qty: 1
                })
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                return response.json();
            })
            .then(data => {
                if (data.ok) {
                    // Update cart count if element exists
                    const cartCount = document.getElementById('cart-count');
                    if (cartCount) {
                        cartCount.textContent = data.cart_qty;
                    }
                }

                // Display flash messages
                if (data.flashed_messages && data.flashed_messages.length > 0) {
                    const flashContainer = document.querySelector('.flash-messages');
                    if (flashContainer) {
                        data.flashed_messages.forEach(flash => {
                            const alertDiv = document.createElement('div');
                            alertDiv.className = `alert alert-${flash.category} alert-dismissible fade show`;
                            alertDiv.innerHTML = `
                                ${flash.message}
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            `;
                            flashContainer.appendChild(alertDiv);

                            // Auto-remove after 3 seconds
                            setTimeout(() => {
                                alertDiv.remove();
                            }, 3000);
                        });
                    }
                }
            })
            .catch(error => {
                console.error('Error:', error);
                // Display error using flash message system
                const flashContainer = document.querySelector('.flash-messages');
                if (flashContainer) {
                    const alertDiv = document.createElement('div');
                    alertDiv.className = 'alert alert-danger alert-dismissible fade show';
                    alertDiv.innerHTML = `
                        Error adding item to cart
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    `;
                    flashContainer.appendChild(alertDiv);

                    // Auto-remove after 3 seconds
                    setTimeout(() => {
                        alertDiv.remove();
                    }, 3000);
                }
            });
        });
    });
});
</script>
{% endblock %}

