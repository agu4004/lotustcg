{% extends "base.html" %}

{% block title %}{{ card.name }} - The Lotus TCG{% endblock %}

{% block content %}
<div class="container my-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ url_for('index') }}">Home</a></li>
            <li class="breadcrumb-item"><a href="{{ url_for('catalog') }}">Catalog</a></li>
            <li class="breadcrumb-item active">{{ card.name }}</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-lg-6">
            <!-- Card Image -->
            <div class="card">
                <div class="card-body text-center py-4">
                    {% if card.image_url %}
                    <img src="{{ card.image_url }}" alt="{{ card.name }}" 
                         class="img-fluid rounded shadow" style="max-height: 400px; width: auto; object-fit: contain;"
                         onerror="this.style.display='none'; this.nextElementSibling.style.display='block';">
                    <div style="display: none;">
                        <i class="fas fa-image display-1 text-muted mb-3"></i>
                        <h5 class="text-muted">Image Not Available</h5>
                        <p class="text-muted">{{ card.name }}</p>
                    </div>
                    {% else %}
                    <i class="fas fa-image display-1 text-muted mb-3"></i>
                    <h5 class="text-muted">No Image Available</h5>
                    <p class="text-muted">{{ card.name }}</p>
                    {% endif %}
                </div>
            </div>
        </div>
        
        <div class="col-lg-6">
            <!-- Card Details -->
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">{{ card.name }}</h3>
                    <span class="badge bg-primary fs-6">{{ card.rarity }}</span>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-4"><strong>Set:</strong></div>
                        <div class="col-sm-8">{{ card.set_name }}</div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-sm-4"><strong>Rarity:</strong></div>
                        <div class="col-sm-8">
                            <span class="badge bg-secondary">{{ card.rarity }}</span>
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-sm-4"><strong>Condition:</strong></div>
                        <div class="col-sm-8">{{ card.condition }}</div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-sm-4"><strong>Price:</strong></div>
                        <div class="col-sm-8">
                            <span class="h4 text-success">{{ "{:,.0f}".format(card.price) }} VND</span>
                        </div>
                    </div>
                    
                    <div class="row mb-4">
                        <div class="col-sm-4"><strong>Available:</strong></div>
                        <div class="col-sm-8">
                            {% if card.quantity > 0 %}
                                <span class="text-success fw-bold">{{ card.quantity }} copies in stock</span>
                            {% else %}
                                <span class="text-danger fw-bold">Out of Stock</span>
                            {% endif %}
                        </div>
                    </div>
                    
                    {% if card.description %}
                    <div class="mb-4">
                        <strong>Description:</strong>
                        <p class="text-muted mt-2">{{ card.description }}</p>
                    </div>
                    {% endif %}
                    
                    <!-- Add to Cart Form -->
                    {% if card.quantity > 0 %}
                    <form method="POST" action="/cart/add" class="add-to-cart-form flex-fill">
                        <div class="row align-items-end">
                            <div class="col-sm-4">
                                <label for="quantity" class="form-label">Quantity:</label>
                                <select class="form-select" id="quantity" name="quantity">
                                    {% for i in range(1, [card.quantity + 1, 11]|min) %}
                                    <option value="{{ i }}">{{ i }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="col-sm-8">
                                <input type="hidden" name="card_id" value="{{ card.id }}">
                                <button type="submit" class="btn btn-success btn-lg w-100">
                                    <i class="fas fa-cart-plus me-2"></i>Add to Cart
                                </button>
                            </div>
                        </div>
                        <div class="mt-3">
                            <small class="text-muted">
                                <i class="fas fa-info-circle me-1"></i>
                                Total: <span id="total-price">{{ "{:,.0f}".format(card.price) }} VND</span>
                            </small>
                        </div>
                    </form>
                    {% else %}
                    <div class="d-grid">
                        <button class="btn btn-secondary btn-lg" disabled>
                            <i class="fas fa-times me-2"></i>Out of Stock
                        </button>
                    </div>
                    {% endif %}
                </div>
            </div>
            
            <!-- Actions -->
            <div class="mt-3">
                <a href="{{ url_for('catalog') }}" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Catalog
                </a>
                <a href="{{ url_for('view_cart') }}" class="btn btn-outline-success">
                    <i class="fas fa-shopping-cart me-2"></i>View Cart
                    {% if cart_count > 0 %}
                        <span class="badge bg-success ms-1">{{ cart_count }}</span>
                    {% endif %}
                </a>
            </div>
        </div>
    </div>
    
    <!-- Related Cards Section (placeholder) -->
    <div class="mt-5">
        <h4>More from {{ card.set_name }}</h4>
        <div class="text-center py-4">
            <i class="fas fa-magic text-muted display-4 mb-3"></i>
            <p class="text-muted">Related cards would appear here in a full implementation.</p>
            <a href="{{ url_for('catalog', set=card.set_name) }}" class="btn btn-outline-primary">
                <i class="fas fa-search me-2"></i>Browse {{ card.set_name }}
            </a>
        </div>
    </div>
</div>

<div class="flash-messages">
    {% with messages = get_flashed_messages(with_categories=true) %}
        {% if messages %}
            {% for category, message in messages %}
                <div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endif %}
    {% endwith %}
</div>
{% endblock %}

{% block scripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const quantitySelect = document.getElementById('quantity');
    const totalPriceSpan = document.getElementById('total-price');
    const cardPrice = {{ card.price }};
    
    // Update total price when quantity changes
    if (quantitySelect && totalPriceSpan) {
        quantitySelect.addEventListener('change', function() {
            const quantity = parseInt(this.value);
            const total = cardPrice * quantity;
            totalPriceSpan.textContent = total.toLocaleString() + ' VND';
        });
    }

    // Handle add to cart form submission
    document.querySelectorAll('.add-to-cart-form').forEach(function(form) {
        form.addEventListener('submit', function(e) {
            e.preventDefault();

            const cardId = form.querySelector('[name="card_id"]').value;
            const quantity = form.querySelector('[name="quantity"]').value;

            fetch('/cart/add', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest'
                },
                body: JSON.stringify({
                    card_id: cardId,
                    qty: parseInt(quantity) || 1
                })
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                return response.json();
            })
            .then(data => {
                if (data.ok) {
                    // Update cart count in badge
                    const cartCount = document.getElementById('cart-count');
                    if (cartCount) {
                        cartCount.textContent = data.cart_qty;
                    }
                }

                // Display flash messages
                if (data.flashed_messages && data.flashed_messages.length > 0) {
                    const flashContainer = document.querySelector('.flash-messages');
                    if (flashContainer) {
                        data.flashed_messages.forEach(flash => {
                            const alertDiv = document.createElement('div');
                            alertDiv.className = `alert alert-${flash.category} alert-dismissible fade show`;
                            alertDiv.innerHTML = `
                                ${flash.message}
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            `;
                            flashContainer.appendChild(alertDiv);

                            // Auto-remove after 3 seconds
                            setTimeout(() => {
                                alertDiv.remove();
                            }, 3000);
                        });
                    }
                }
            })
            .catch(error => {
                console.error('Error:', error);
                // Display error using flash message system
                const flashContainer = document.querySelector('.flash-messages');
                if (flashContainer) {
                    const alertDiv = document.createElement('div');
                    alertDiv.className = 'alert alert-danger alert-dismissible fade show';
                    alertDiv.innerHTML = `
                        Error adding item to cart
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    `;
                    flashContainer.appendChild(alertDiv);

                    // Auto-remove after 3 seconds
                    setTimeout(() => {
                        alertDiv.remove();
                    }, 3000);
                }
            });
        });
    });
});
</script>
{% endblock %}
